{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",               
    "baseUrl": ".",
    "paths": {
      "@domain/*": ["libs/domain/*"],
      "@infra/*": ["libs/infra/*"],
      "@use-cases/*": ["libs/use-cases/*"],
      "@interface/*": ["libs/interface/*"]
    }
  },
  "include": [
    "src/**/*",
    "libs/**/*"                    
  ]
}
